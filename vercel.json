{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket.io/:1"
    },
    {
      "source": "/api/rooms",
      "destination": "/api/rooms"
    },
    {
      "source": "/api/socket",
      "destination": "/api/socket"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "env": {
    "PORT": "3000"
  }
}
